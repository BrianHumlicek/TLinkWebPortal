@page "/"
@using TLinkWebPortal.Services
@using TLinkWebPortal.Services.Models
@using DSC.TLink.ITv2.MediatR
@inject IPartitionStatusService PartitionService
@inject IITv2SessionManager SessionManager
@implements IDisposable

<PageTitle>Security Panel Status</PageTitle>

<MudContainer MaxWidth="MaxWidth.ExtraLarge" Class="mt-4">
    <MudText Typo="Typo.h4" GutterBottom="true">Security Panel Status</MudText>

    @if (!activeSessions.Any())
    {
        <MudAlert Severity="Severity.Warning" Class="mt-4">
            <MudText>No active panel connections. Waiting for panel to connect...</MudText>
        </MudAlert>
    }
    else
    {
        <MudSelect T="string" Label="Active Session" @bind-Value="selectedSessionId" Class="mb-4">
            @foreach (var sessionId in activeSessions)
            {
                <MudSelectItem T="string" Value="@sessionId">@sessionId</MudSelectItem>
            }
        </MudSelect>

        @if (!string.IsNullOrEmpty(selectedSessionId))
        {
            var partitions = PartitionService.GetPartitions(selectedSessionId);
            
            @if (!partitions.Any())
            {
                <MudAlert Severity="Severity.Info" Class="mt-4">
                    <MudText>Waiting for partition status data...</MudText>
                </MudAlert>
            }
            else
            {
                <MudGrid>
                    @foreach (var (partitionNumber, partition) in partitions)
                    {
                        <MudItem xs="12" lg="6">
                            <MudCard Elevation="4" Class="mb-4">
                                <MudCardHeader>
                                    <CardHeaderContent>
                                        <MudText Typo="Typo.h5">
                                            <MudIcon Icon="@Icons.Material.Filled.Shield" Class="mr-2" />
                                            Partition @partitionNumber
                                        </MudText>
                                    </CardHeaderContent>
                                    <CardHeaderActions>
                                        <MudChip T="string" 
                                                 Color="@(partition.IsReady ? Color.Success : Color.Warning)" 
                                                 Size="Size.Small">
                                            @partition.ArmMode
                                        </MudChip>
                                    </CardHeaderActions>
                                </MudCardHeader>
                                <MudCardContent>
                                    <MudStack Spacing="2">
                                        <MudText>
                                            <strong>Status:</strong> 
                                            @(partition.IsReady ? "Ready to Arm" : "Not Ready")
                                        </MudText>
                                        <MudText>
                                            <strong>Armed:</strong> 
                                            @(partition.IsArmed ? "Yes" : "No")
                                        </MudText>
                                        <MudText Typo="Typo.caption">
                                            Last Updated: @partition.LastUpdated.ToLocalTime().ToString("HH:mm:ss")
                                        </MudText>

                                        <MudDivider Class="my-2" />

                                        <MudText Typo="Typo.h6" Class="mt-2">
                                            Zones (@partition.Zones.Count)
                                        </MudText>

                                        @if (!partition.Zones.Any())
                                        {
                                            <MudText Typo="Typo.caption" Color="Color.Secondary">
                                                No zone data available
                                            </MudText>
                                        }
                                        else
                                        {
                                            <MudGrid Spacing="1">
                                                @foreach (var (zoneNumber, zone) in partition.Zones.OrderBy(z => z.Key))
                                                {
                                                    <MudItem xs="6" sm="4" md="3">
                                                        <MudTooltip Text="@GetZoneTooltip(zone)">
                                                            <MudChip T="string" 
                                                                     Size="Size.Small" 
                                                                     Color="@GetZoneColor(zone)"
                                                                     Variant="@(zone.IsOpen || zone.IsFaulted || zone.IsTampered ? Variant.Filled : Variant.Outlined)">
                                                                <MudIcon Icon="@GetZoneIcon(zone)" Size="Size.Small" Class="mr-1" />
                                                                Z@zoneNumber
                                                            </MudChip>
                                                        </MudTooltip>
                                                    </MudItem>
                                                }
                                            </MudGrid>
                                        }
                                    </MudStack>
                                </MudCardContent>
                                <MudCardActions>
                                    <MudButton Variant="Variant.Text" 
                                               Color="Color.Primary" 
                                               OnClick="@(() => ShowZoneDetails(partitionNumber))"
                                               Disabled="!partition.Zones.Any()">
                                        View Details
                                    </MudButton>
                                </MudCardActions>
                            </MudCard>
                        </MudItem>
                    }
                </MudGrid>
            }
        }
    }
</MudContainer>

@code {
    private string selectedSessionId = "";
    private List<string> activeSessions = new();
    private System.Threading.Timer? refreshTimer;

    protected override void OnInitialized()
    {
        // Get active sessions
        RefreshSessions();

        // Subscribe to state change events
        PartitionService.PartitionStateChanged += OnPartitionStateChanged;
        PartitionService.ZoneStateChanged += OnZoneStateChanged;

        // Refresh session list periodically
        refreshTimer = new System.Threading.Timer(_ =>
        {
            InvokeAsync(() =>
            {
                RefreshSessions();
                StateHasChanged();
            });
        }, null, TimeSpan.FromSeconds(5), TimeSpan.FromSeconds(5));
    }

    private void RefreshSessions()
    {
        var sessions = SessionManager.GetActiveSessions().ToList();
        
        // Update list if changed
        if (!sessions.SequenceEqual(activeSessions))
        {
            activeSessions = sessions;
            
            // Auto-select first session if none selected
            if (string.IsNullOrEmpty(selectedSessionId) && activeSessions.Any())
            {
                selectedSessionId = activeSessions.First();
            }
            // Clear selection if selected session disconnected
            else if (!activeSessions.Contains(selectedSessionId))
            {
                selectedSessionId = activeSessions.FirstOrDefault() ?? "";
            }
        }
    }

    private void OnPartitionStateChanged(object? sender, PartitionStateChangedEventArgs e)
    {
        if (e.SessionId == selectedSessionId)
        {
            InvokeAsync(StateHasChanged);
        }
    }

    private void OnZoneStateChanged(object? sender, ZoneStateChangedEventArgs e)
    {
        if (e.SessionId == selectedSessionId)
        {
            InvokeAsync(StateHasChanged);
        }
    }

    private Color GetZoneColor(ZoneState zone)
    {
        if (zone.IsTampered) return Color.Error;
        if (zone.IsFaulted) return Color.Error;
        if (zone.IsOpen) return Color.Warning;
        if (zone.IsBypassed) return Color.Info;
        return Color.Success;
    }

    private string GetZoneIcon(ZoneState zone)
    {
        if (zone.IsTampered) return Icons.Material.Filled.Error;
        if (zone.IsFaulted) return Icons.Material.Filled.Warning;
        if (zone.IsOpen) return Icons.Material.Filled.LockOpen;
        if (zone.IsBypassed) return Icons.Material.Filled.Block;
        return Icons.Material.Filled.Lock;
    }

    private string GetZoneTooltip(ZoneState zone)
    {
        var status = new List<string>();
        
        if (!string.IsNullOrEmpty(zone.ZoneName))
            status.Add(zone.ZoneName);
        
        status.Add(zone.IsOpen ? "OPEN" : "CLOSED");
        
        if (zone.IsTampered) status.Add("TAMPERED");
        if (zone.IsFaulted) status.Add("FAULTED");
        if (zone.IsBypassed) status.Add("BYPASSED");
        
        status.Add($"Updated: {zone.LastUpdated.ToLocalTime():HH:mm:ss}");
        
        return string.Join(" | ", status);
    }

    private void ShowZoneDetails(byte partitionNumber)
    {
        // TODO: Navigate to detailed zone view or show dialog
        Console.WriteLine($"Show details for partition {partitionNumber}");
    }

    public void Dispose()
    {
        PartitionService.PartitionStateChanged -= OnPartitionStateChanged;
        PartitionService.ZoneStateChanged -= OnZoneStateChanged;
        refreshTimer?.Dispose();
    }
}